{
  "install": "cd frontend && npm install",
  "start": "cd frontend && npm run dev",
  "watch": {
    "install": {
      "include": [
        "^frontend/package\\.json$"
      ]
    },
    "restart": {
      "include": [
        "^frontend/.*\\.js$",
        "^frontend/.*\\.jsx$"
      ],
      "exclude": [
        "^frontend/node_modules/"
      ]
    },
    "throttle": 1000
  }
}
